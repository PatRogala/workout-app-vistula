<section class="w-[95%] m-auto mt-[80px] flex justify-center items-center h-[90vh]">
  <div class="w-full flex justify-center items-center flex-col">
    <h2 class="text-[25px] font-[500] font-Poppins text-center py-2 mb-2">Login to get started</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, "Enter your Email", class: "text-[16px]" %>
        <%= f.email_field :email, autofocus: true, placeholder: "awesome@email.com", autocomplete: "email", class: "w-full bg-transparent border rounded h-[40px] px-2 outline-none mt-[10px] font-Poppins" %>
      </div>

      <div class="mt-5">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "*********", autocomplete: "current-password", class: "w-full bg-transparent border rounded h-[40px] px-2 outline-none mt-[10px] font-Poppins" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-5">
          <%= f.check_box :remember_me, checked: true %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mt-5">
        <%= f.submit "Log in", class: "py-3 px-6 rounded-full cursor-pointer bg-[#2190ff] min-h-[45px] w-full text-[16px] font-Poppins font-semibold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
